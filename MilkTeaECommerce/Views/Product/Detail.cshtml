@model MilkTeaECommerce.Models.Product
@{
    ViewData["Title"] = "Detail";
}
@section header{ 
    <link href="~/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
}
<div class="banner-bootom-w3-agileits">
    
    <div class="container">
        <!-- tittle heading -->
        <h3 class="tittle-w3l">
            Chi tiết sản phẩm
            <span class="heading-style">
                <i></i>
                <i></i>
                <i></i>
            </span>
        </h3>
        <!-- //tittle heading -->
        <div class="col-md-5 single-right-left ">
            <div class="grid images_3_of_2">
                <div class="flexslider">
                    <ul class="slides d-none">
                        <!--hinhf anhr san pham-->
                        <li data-thumb="@Model.ImageUrl">
                            <div class="thumb-image">
                                <img src="@Model.ImageUrl" data-imagezoom="true" class="img-responsive" alt="">
                            </div>
                        </li>
                        @*<li data-thumb="images/si2.jpg">
                                <div class="thumb-image">
                                    <img src="images/si2.jpg" data-imagezoom="true" class="img-responsive" alt="">
                                </div>
                            </li>
                            <li data-thumb="images/si3.jpg">
                                <div class="thumb-image">
                                    <img src="images/si3.jpg" data-imagezoom="true" class="img-responsive" alt="">
                                </div>
                            </li>*@
                    </ul>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="col-md-7 single-right-left simpleCart_shelfItem">
            <!--thoong tin san pham-->
            <h3>
                @Model.Name.ToUpper()

            </h3>
            <span>Đã bán : @ViewBag.product_selled_count    </span>
            <span>Lượt đánh giá : @ViewBag.product_rate_count</span> 
            <p>
                <span class="item_price">@Model.Price VND</span>
                <del>@(Model.Price*2) VND</del>

            </p>
            <div class="rating1">
                Điểm đánh giá :
                <span class="starRating">
                    <input id="rating5_product" type="radio" name="rating5_product" value="5">
                    <label for="rating5_product">5</label>
                    <input id="rating4_product" type="radio" name="rating4_product" value="4">
                    <label for="rating4_product">4</label>
                    <input id="rating3_product" type="radio" name="rating3_product" value="3">
                    <label for="rating3_product">3</label>
                    <input id="rating2_product" type="radio" name="rating2_product" value="2">
                    <label for="rating2_product">2</label>
                    <input id="rating1_product" type="radio" name="rating1_product" value="1">
                    <label for="rating1_product">1</label>
                </span>
            </div>

            <div class="product-single-w3l">
                <p>
                    <i class="fa fa-hand-o-right" aria-hidden="true"></i>Danh mục sản phẩm:
                    <label>@Model.Category.Name</label>
                </p>
                <ul>
                    Mô tả:
                    @Html.Raw(@Model.Description)
                </ul>

            </div>
            <div class="occasion-cart">
                <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                    <form action="#" method="post">
                        <fieldset>
                            <input type="hidden" name="cmd" value="_cart" />
                            <input type="hidden" name="add" value="@Model.Id" />
                            <input type="hidden" name="shipping" value="@Model.ImageUrl" />
                            <input type="hidden" name="item_name" value="@Model.Name" />
                            <input type="hidden" name="amount" value="@(Model.Price*2)" />
                            <input type="hidden" name="discount_amount" value="@Model.Price" />
                            <input type="hidden" name="currency_code" value="VND" />
                            <input type="hidden" name="return" value=" " />
                            <input type="hidden" name="cancel_return" value=" " />
                            <input type="submit" name="submit" value="Add to cart" class="button" />
                        </fieldset>
                    </form>
                </div>

            </div>

        </div>
        <div class="clearfix"> </div>
    </div>
</div>
<div class="container" style="margin-top:100px; border:solid">
    <div class="row" style="margin:20px">
        <div class="col-md-4">
            <a href="/Shop/Details/@Model.ShopId">

                <div style="display:flex;align-items:center">
                    <img src="@(Model.Shop.ImgUrl==null?"":Model.Shop.ImgUrl)" style="border-radius:50%;margin-right:10px" height="50" width="50" />

                    <div style="font-size:20px;margin-right:10px ">@Model.Shop.Name</div>

                    <div class="rating1">
                        <span class="starRating">
                            <input id="rating5_shop" type="radio" name="rating5_shop" value="5">
                            <label for="rating5_shop">5</label>
                            <input id="rating4_shop" type="radio" name="rating4_shop" value="4">
                            <label for="rating4_shop">4</label>
                            <input id="rating3_shop" type="radio" name="rating3_shop" value="3">
                            <label for="rating3_shop">3</label>
                            <input id="rating2_shop" type="radio" name="rating2_shop" value="2">
                            <label for="rating2_shop">2</label>
                            <input id="rating1_shop" type="radio" name="rating1_shop" value="1">
                            <label for="rating1_shop">1</label>
                        </span>
                    </div>

                    <label class="btn btn-primary btn-sm" for="shop_go"> Xem thông tin shop</label>

                </div>

            </a>



        </div>
        <div class="col-md-1">

        </div>
        <div class="col-md-7">
            <div class="row">
                <div class="col-md-6">Số lượng sản phẩm : @ViewBag.Product_Count</div>
                <div class="col-md-6">Số lượt đánh giá : @ViewBag.Rate_Count</div>
                <div class="col-md-6">Số lượng người đã mua : @ViewBag.Customer_Bought</div>
                <div class="col-md-6">Phần trăm đơn giao thành công : @ViewBag.Success_Percent %</div>
            </div>
        </div>
    </div>

</div>
<div class="container" style="margin-top:100px; border:solid">
    <h3  style=" color :red  ">Đánh giá sản phẩm</h3>
    <div style="border-bottom: solid"></div>
    <br />
    <div class="product-ratings-list">
        @foreach (var item in Model.Ratings)
        {
            <partial name="_RatingPartial" model="item" />
        }
    </div>

</div>

@section Scripts{
    <script src="~/js/product_detail.js"></script>
}

