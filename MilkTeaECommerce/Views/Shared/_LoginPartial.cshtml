@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


    @if (SignInManager.IsSignedIn(User))
    { 
        
<li class="nav-item dropdown">
    <a class="nav-link text-dark" href="#" id="dropdownMenuLink" data-toggle="dropdown">Hello @User.Identity.Name</a>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <a class="dropdown-item"asp-action="Index" asp-controller="User">Thông tin cá nhân</a>
        <hr />
        <a class="dropdown-item" href="#">cái gì ở đây ta?</a>
        <hr />
        <a class="dropdown-item" asp-action="Index" asp-controller="Home" asp-area="Seller">Kênh Seller (@(User.IsInRole("Manager") == true?"Đã đăng kí":"Chưa đăng kí"))</a>
        <hr />
        <a class="dropdown-item" asp-action="Index" asp-controller="Home" asp-area="Shipper">Kênh Shipper (@(User.IsInRole("Shipper") ==true?"Đã đăng kí":"Chưa đăng kí"))</a>

    </div>
</li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Logout" asp-controller="Identity">Đăng xuất</a>
        </li>
    }
    else
    {
        <li>
            <a href="#" data-toggle="modal" data-target="#SignInModal">
                <span class="fa fa-unlock-alt" aria-hidden="true"></span> Đăng nhập
            </a>
        </li>
        <li>
            <a href="#" data-toggle="modal" data-target="#SignUpModal">
                <span class="fa fa-pencil-square-o" aria-hidden="true"></span> Đăng ký
            </a>
        </li>
    }

