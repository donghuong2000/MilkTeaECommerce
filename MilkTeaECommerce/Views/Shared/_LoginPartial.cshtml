@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" >Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Logout" asp-controller="Identity">Logout</a>
        </li>
    }
    else
    {
        <li>
            <a href="#" data-toggle="modal" data-target="#SignInModal">
                <span class="fa fa-unlock-alt" aria-hidden="true"></span> Sign In
            </a>
        </li>
        <li>
            <a href="#" data-toggle="modal" data-target="#SignUpModal">
                <span class="fa fa-pencil-square-o" aria-hidden="true"></span> Sign Up
            </a>
        </li>
    }

