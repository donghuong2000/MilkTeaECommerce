@model IEnumerable<MilkTeaECommerce.Models.Models.ShopViewModel>;

<h3 class="heading-tittle">All Products</h3>
<span class="heading-style"></span>
<section class="cart_area">
    <div class="container">
        <div class="cart_inner">
            <div class="">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="border-top: 1px solid #dee2e6 !important;">
                                    <div class="media-min">
                                        <div class="d-flex">
                                            <img style="height:10rem" src="@item.ImgUrl" alt="">
                                        </div>
                                        <div class="media-body-min">
                                            <a href="/shop/details/@item.Id" style="color:black;font-weight:700">@item.Name</a>
                                            <p>@item.Address</p>
                                        </div>
                                    </div>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
