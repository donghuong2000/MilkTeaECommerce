@model List<MilkTeaECommerce.Models.Models.ProductViewUserModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="ads-grid">
    <div class="container">
        <div class="side-bar col-md-3"  >
            <div class="search-hotel" style="place-items: center;display: grid;">
                <img src="@ViewBag.Image" style="margin-bottom:2rem" />
                <h4 >
                    @ViewBag.NameShop
                </h4>
                <p >@ViewBag.Address </p>
            </div>
            <!-- price range -->
            <div>
                <p>@ViewBag.DeShop</p>
            </div>
        </div>
        <div class="agileinfo-ads-display col-md-9">
            <div class="wrapper">
                <!-- first section (nuts) -->
                <div class="product-sec1">
                    <h3 class="heading-tittle">All Products</h3>
                    <span class="heading-style"></span>
                        @if (Model.Count() == 0)
                        {
                            <p style="display:flex; justify-content:center">Empty</p>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <partial name="ProductPartial" model="item" />
                            }

                        }
                        <div class="clearfix"></div>
                        <div>
                            <div style=" place-content: center; display: flex;">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item">
                                            <a class="page-link" href="/shop/details?id=@ViewBag.IdShop&page=@(ViewBag.page - 1)" tabindex="-1" aria-disabled="true">Previous</a>
                                        </li>
                                        <li class="page-item"><a class="page-link" href="#">@ViewBag.page</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="/shop/details?id=@ViewBag.IdShop&page=@(ViewBag.page + 1)">Next</a>
                                        </li>
                                    </ul>
                                </nav>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                </div>
                </div>
               
            </div>
        </div>
        </div>

       

@section Header{
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" />

    <link href="/css/shop/shop.css" rel="stylesheet" />

} 
