@model MilkTeaECommerce.Models.Discount


<div class="modal fade" id="Detail" role="dialog">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form asp-action="Edit" method="post">
                <h4>Discount</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Name
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Name" id="Name" class="form-control" />
                    </dd>
                    <dt class="col-sm-2">
                        Description
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Description" id="Description" class="form-control" />
                    </dd>
                    <dt class="col-sm-2">
                        DateStart
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="DateStart" id="DateStart" class="form-control" />
                    </dd>
                    <dt class="col-sm-2">
                        DateExpired
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="DateExpired" id="DateExpired" class="form-control" />
                    </dd>
                    <dt class="col-sm-2">
                        TimesUsed
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="TimesUsed" id="TimesUsed" class="form-control" />
                    </dd>
                    <dt class="col-sm-2">
                        TimesUseLimit
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="TimesUseLimit" id="TimesUseLimit" class="form-control" />
                    </dd>
                    <dt class="col-sm-2">
                        PercentDiscount
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="PercentDiscount" id="PercentDiscount" class="form-control" />
                    </dd>
                    <dt class="col-sm-2">
                        MaxDiscount
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="MaxDiscount" id="MaxDiscount" class="form-control" />
                    </dd>
                    <dt class="col-sm-2">
                        Code
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Code" id="Code" class="form-control" />
                    </dd>
                </dl>
            </form>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

</div>




