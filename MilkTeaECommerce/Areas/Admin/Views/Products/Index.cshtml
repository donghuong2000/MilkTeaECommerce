@model IEnumerable<MilkTeaECommerce.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card shadow mb-4">
    <div class="card-header py-3">

        <h6 class="m-0 font-weight-bold text-primary">Danh sách sản phảm</h6>
      
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Hình ảnh </th>
                        <th>Tên sản phẩm</th>
                        <th>Danh mục</th>
                        <th>tên shop</th>
                        <th>Mô tả</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Duyệt</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Hình ảnh </th>
                        <th>Tên sản phẩm</th>
                        <th>Danh mục</th>
                        <th>tên shop</th>
                        <th>Mô tả</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Duyệt</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>




<div class="modal fade" id="DetailModalProduct" tabindex="-1" aria-labelledby="DetailModalLabelProduct" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DetailModalLabelProduct">Chỉnh Sửa sản phẩm</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form onsubmit="return false">
                    @*<div class="form-group">
                            <input class=" form-control" type="text" id="update_productid_old" />
                        </div>*@
                    <div class="form-group">
                        <label>Mã sản phẩm</label>
                        <input class=" form-control " type="text" id="update_productid_old" readonly />
                    </div>
                    <div class="form-group">
                        <label>Tên sản phẩm</label>
                        <input class=" form-control " type="text" id="update_productname" readonly />
                    </div>
                    <div class="form-group">
                        <label>Mô tả</label>
                        <input class=" form-control " type="text" id="update_productdescription" readonly />
                    </div>
                    <div class="form-group">
                        <label>Hình ảnh</label>
                        <input class=" form-control " type="text" id="update_productimage" readonly />
                    </div>
                    <div class="form-group">
                        <label>Giá</label>
                        <input class=" form-control " type="text" id="update_productprice" readonly />
                    </div>
                    <div class="form-group">
                        <label>Trạng thái</label>
                        <input class=" form-control " type="text" id="update_productstatus" readonly />
                    </div>
                    <div class="form-group">
                        <label>Số lượng</label>
                        <input class=" form-control " type="text" id="update_productquantity" readonly />
                    </div>
                    <div class="form-group">
                        <label>Loại</label>
                        <input class=" form-control " type="text" id="update_productcategory" readonly />
                    </div>
                    <div class="form-group">
                        <label>Cửa hàng</label>
                        <input class=" form-control " type="text" id="update_productshopid" readonly />
                    </div>
                    <a href="/Admin/Products/Index" class="btn btn-dark">Quay lại</a>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <!-- Page level plugins -->
    <script src="~/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Admin/js/build/toastr.min.js"></script>
    <!--cái này của thông báo-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <!--cái này của selectlist search-->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="~/Admin/js/Products.js"></script>


}
@section Header{

    <!--cái này của selectlist search-->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <!--cái này của thông báo-->
    <link href="~/Admin/js/build/toastr.css" rel="stylesheet" />
    <link href="~/Admin/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
}